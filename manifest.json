{
  "manifest_version": 2,

  "name": "Twitter infinite scroll disabler",
  "description": "Disables Twitter's automatic infinite scrolling and replaces it with a \"show more\" button.",
  "version": "1.0",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://twitter.com/*"],
      "css": ["style.css"],
      "js": ["jquery-3.4.1.slim.min.js","content-script.js"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
   "128": "icon128.png"
  }
}
